\providecommand\beamer@partintoc[3]{%
  \ifnum\c@tocdepth=-1\relax % requesting parts
    \alert{\partname~#1: }#2\par
  \fi
}
\define@key{beamertoc}{parts}[]{%
  \c@tocdepth=-1\relax
}

